{
  "name": "@dobromyslov/abstract-request",
  "version": "0.9.17",
  "description": "Lightweight abstract request library for API clients implementation",
  "license": "MIT",
  "repository": "dobromyslov/abstract-request",
  "author": "Viacheslav Dobromyslov <viacheslav@dobromyslov.ru>",
  "keywords": [
    "fetch",
    "node-fetch",
    "request",
    "api client",
    "http"
  ],
  "files": [
    "dist"
  ],
  "main": "dist",
  "types": "dist",
  "sideEffects": false,
  "scripts": {
    "test": "xo && tsc --noEmit && nyc jasmine-ts",
    "build": "del-cli dist && tsc",
    "release": "npm run build && np"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jasmine": "^3.5.10",
    "@types/node": "^10.17.17",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "del-cli": "^3.0.0",
    "eslint-config-xo-typescript": "^0.26.0",
    "jasmine": "^3.5.0",
    "jasmine-ts": "^0.3.0",
    "np": "^6.2.0",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "xo": "^0.26.1"
  },
  "eslintConfig": {
    "extends": [
      "xo/esnext",
      "xo-typescript",
      "xo-typescript/space"
    ]
  },
  "xo": {
    "extends": [
      "xo-typescript"
    ],
    "extensions": [
      "ts"
    ],
    "ignores": [
      "spec/"
    ],
    "space": true,
    "rules": {
      "@typescript-eslint/indent": "off",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "reflect-metadata"
          ]
        }
      ]
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcovonly",
      "text",
      "text-summary"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  }
}
